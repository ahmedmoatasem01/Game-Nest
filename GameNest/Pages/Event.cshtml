        <script>
            const eventForm = document.getElementById('eventForm');
            const eventList = document.getElementById('eventList');

            // Initial events
            const events = [
                { title: "Cyber Clash Tournament", date: "2024-03-25", details: "Join the ultimate battle for glory!" },
                { title: "Space Odyssey Challenge", date: "2024-04-10", details: "Explore the stars in this exciting adventure event." }
            ];

            // Function to render events
            function renderEvents() {
                eventList.innerHTML = '';
                events.forEach((event) => {
                    const eventElement = document.createElement('div');
                    eventElement.classList.add('event');
                    eventElement.innerHTML = `
                                <h4>${event.title}</h4>
                                <p><strong>Date:</strong> ${event.date}</p>
                                <p>${event.details}</p>
                            `;
                    eventList.appendChild(eventElement);
                });
            }

            // Handle form submission
            eventForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const title = document.getElementById('eventTitle').value;
                const date = document.getElementById('eventDate').value;
                const details = document.getElementById('eventDetails').value;

                if (title && date && details) {
                    events.push({ title, date, details });
                    renderEvents();
                    eventForm.reset();
                }
            });

            // Initial render
            renderEvents();
        </script>

