@page
@model GameNest.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">









<body>

    <div class="hero_area">
        <!-- Header Section -->

        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" asp-area="" asp-page="/Home">
                        <h1 style="color: #1e90ff;">🎮 GameNest</h1>
                    </a>


                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item ">
                                <a class="nav-link" asp-area="" asp-page="/Home">Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="" asp-page="/Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Event">Event</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Games">Games</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Friends">Friends</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>

    </div>
            <!-- Profile Section -->
            <main>
                <section id="profile">
                    <div class="container">
                        <div class="user-info">
                            <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="Profile Picture" class="profile-pic">
                            <h2>Joey</h2>
                            <p>#3 ranked in Fortnite</p>
                            <p>Lives in New York</p>
                        </div>

                        <div class="user-bio">
                            <h3>Bio</h3>
                            <p>🎮 Pro Gamer | Content Creator | Gaming Enthusiast</p>
                            <p>
                                I'm a passionate gamer with a love for immersive storytelling, competitive play, and pushing the limits in every game I play.
                            </p>
                            <h4>Gaming Highlights:</h4>
                            <ul>
                                <li>Favorite Games: Call of Duty, League of Legends, Fortnite</li>
                                <li>Specialties: FPS sharpshooter, RPG strategist, MOBA tactician</li>
                                <li>Achievements: Ranked Top 3 in Fortnite, Streamed to 10K followers</li>
                            </ul>
                        </div>

                        <!-- Post Creation Form -->
                        <div class="post-creation">
                            <h3>Create a Post</h3>
                            <form id="postForm">
                                <input type="text" id="postTitle" placeholder="Post Title" required>
                                <textarea id="postContent" placeholder="Write your post here..." required></textarea>
                                <button type="submit">Share Post</button>
                            </form>
                        </div>

                        <!-- User Feed -->
                        <div class="user-feed">
                            <h3>Your Feed</h3>
                            <div id="userPostsContainer">
                                <!-- User posts will appear here -->
                            </div>
                        </div>

                        <!-- Game Inventory -->
                        <div class="game-inventory">
                            <h3>Your Game Inventory</h3>
                            <div id="gamesContainer">
                                <!-- Game inventory will appear here -->
                            </div>
                        </div>
                    </div>
                </section>
            </main>

            <footer>
                <div class="container">
                    <p>&copy; 2024 <span class="highlight">GameNest</span>. All Rights Reserved.</p>
                </div>
            </footer>

            <script>
                const postForm = document.getElementById('postForm');
                const userPostsContainer = document.getElementById('userPostsContainer');
                const gamesContainer = document.getElementById('gamesContainer');

                // Array to hold user's posts
                let userPosts = [
                    { title: "Loving the new Fortnite update!", content: "The graphics and gameplay are so smooth!", likes: 12, comments: ["Amazing update!", "Love the graphics!"] },
                    { title: "Top tips for ranking up in League of Legends", content: "Check out these strategies to climb faster.", likes: 8, comments: ["Thanks for the tips!", "This really helped me rank up."] }
                ];

                // Array to hold user's game inventory
                let games = [
                    { name: "Fortnite", playtime: "120 hours" },
                    { name: "League of Legends", playtime: "250 hours" },
                    { name: "Call of Duty", playtime: "300 hours" }
                ];

                // Render user's posts
                function renderUserPosts() {
                    userPostsContainer.innerHTML = '';
                    userPosts.forEach((post, index) => {
                        const postElement = document.createElement('div');
                        postElement.classList.add('post');
                        postElement.innerHTML = `
                            <h4>${post.title}</h4>
                            <p>${post.content}</p>
                            <div class="post-actions">
                                <button class="like-button" onclick="likePost(${index})">
                                    <span>❤️</span> Like (${post.likes})
                                </button>
                                <button class="comment-button" onclick="toggleComments(${index})">
                                    💬 Comments (${post.comments.length})
                                </button>
                            </div>
                            <div class="comments-section" id="comments-${index}" style="display: none;">
                                <div class="comments-list">
                                    ${post.comments.map(comment => `<p>${comment}</p>`).join('')}
                                </div>
                                <input type="text" id="commentInput-${index}" placeholder="Add a comment...">
                                <button onclick="addComment(${index})">Add Comment</button>
                            </div>
                        `;
                        userPostsContainer.appendChild(postElement);
                    });
                }

                // Render game inventory
                function renderGames() {
                    gamesContainer.innerHTML = '';
                    games.forEach(game => {
                        const gameElement = document.createElement('div');
                        gameElement.classList.add('game');
                        gameElement.innerHTML = `
                            <h4>${game.name}</h4>
                            <p>Playtime: ${game.playtime}</p>
                        `;
                        gamesContainer.appendChild(gameElement);
                    });
                }

                // Handle post submission
                postForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    const title = document.getElementById('postTitle').value;
                    const content = document.getElementById('postContent').value;

                    if (title && content) {
                        userPosts.push({ title, content, likes: 0, comments: [] });
                        renderUserPosts();
                        postForm.reset();
                    }
                });

                // Like a post
                function likePost(index) {
                    userPosts[index].likes += 1;
                    renderUserPosts();
                }

                // Toggle comments section
                function toggleComments(index) {
                    const commentsSection = document.getElementById(`comments-${index}`);
                    commentsSection.style.display = commentsSection.style.display === 'none' ? 'block' : 'none';
                }

                // Add a comment
                function addComment(index) {
                    const commentInput = document.getElementById(`commentInput-${index}`);
                    const comment = commentInput.value.trim();
                    if (comment) {
                        userPosts[index].comments.push(comment);
                        renderUserPosts();
                    }
                }

                // Initial render
                renderUserPosts();
                renderGames();
            </script>

            <style>
                /* General Styling */
                body {
                    font-family: "Verdana", sans-serif;
                    margin: 0;
                    padding: 0;
                    background-color: #121212;
                    color: #e0e0e0;
                }

                header {
                    background-color: #1f1f1f;
                    padding: 20px 0;
                    text-align: center;
                    border-bottom: 1px solid #333;
                }

                    header h1 {
                        color: #ff9800;
                        font-size: 2.5rem;
                        margin: 0;
                    }

                nav ul {
                    list-style: none;
                    padding: 0;
                    display: flex;
                    justify-content: center;
                    margin: 10px 0;
                }

                    nav ul li {
                        margin: 0 15px;
                    }

                        nav ul li a {
                            text-decoration: none;
                            color: #e0e0e0;
                            font-weight: bold;
                            padding: 5px 10px;
                        }

                            nav ul li a.active, nav ul li a:hover {
                                color: #1e90ff;
                                border-bottom: 2px solid #1e90ff;
                            }

                .container {
                    max-width: 1200px;
                    margin: 20px auto;
                    padding: 20px;
                }

                .user-info {
                    text-align: center;
                }

                    .user-info .profile-pic {
                        width: 100px;
                        height: 100px;
                        border-radius: 50%;
                        margin-bottom: 10px;
                    }

                .user-bio {
                    background: #1e1e1e;
                    padding: 15px;
                    border-radius: 10px;
                    margin-bottom: 20px;
                }

                .post-creation {
                    margin-bottom: 20px;
                    background: #1e1e1e;
                    padding: 15px;
                    border-radius: 10px;
                }

                    .post-creation input, .post-creation textarea, .post-creation button {
                        display: block;
                        width: 100%;
                        margin: 10px 0;
                        padding: 10px;
                        border: none;
                        border-radius: 5px;
                    }

                    .post-creation button {
                        background-color: #1e90ff;
                        color: #ffffff;
                        cursor: pointer;
                    }

                        .post-creation button:hover {
                            background-color: #1c86ee;
                        }

                .user-feed {
                    background: #1e1e1e;
                    padding: 15px;
                    border-radius: 10px;
                    margin-bottom: 20px;
                }

                .post {
                    background: #2c2c2c;
                    margin: 10px 0;
                    padding: 10px;
                    border-radius: 5px;
                }

                .post-actions {
                    margin-top: 10px;
                    display: flex;
                    gap: 10px;
                }

                .like-button, .comment-button, .game-inventory button {
                    background-color: #1e90ff;
                    color: #ffffff;
                    border: none;
                    padding: 8px 12px;
                    border-radius: 25px;
                    display: flex;
                    align-items: center;
                    gap: 5px;
                    font-size: 14px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                }

                    .like-button span {
                        font-size: 16px;
                    }

                    .like-button:hover, .comment-button:hover, .game-inventory button:hover {
                        background-color: #1c86ee;
                    }

                .comments-section {
                    margin-top: 10px;
                    background: #1e1e1e;
                    padding: 10px;
                    border-radius: 10px;
                }

                .comments-list p {
                    background: #2c2c2c;
                    padding: 5px;
                    margin: 5px 0;
                    border-radius: 5px;
                }

                .game-inventory {
                    background: #1e1e1e;
                    padding: 15px;
                    border-radius: 10px;
                }

                .game {
                    background: #2c2c2c;
                    margin: 10px 0;
                    padding: 10px;
                    border-radius: 5px;
                }
            </style>

</body>
</html>

