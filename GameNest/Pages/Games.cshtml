                    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
                    z-index: 1000;
                    display: none;
                    flex-direction: column;
                    align-items: center;
                }

                .modal-content {
                    width: 100%;
                    max-width: 500px;
                }

                .close-button {
                    position: absolute;
                    top: 10px;
                    right: 10px;
                    background: none;
                    color: #2196f3;
                    font-size: 20px;
                    border: none;
                    cursor: pointer;
                }

                button {
                    padding: 10px 15px;
                    border: none;
                    border-radius: 5px;
                    font-size: 14px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                }

                .cart-button {
                    background-color: #2196f3;
                    color: #121212;
                }

                    .cart-button:hover {
                        background-color: #2196f3;
                    }

                .view-details-button {
                    background-color: #4caf50;
                    color: white;
                }

                    .view-details-button:hover {
                        background-color: #43a047;
                    }

                .add-to-cart-button {
                    background-color: #2196f3;
                    color: white;
                }

                    .add-to-cart-button:hover {
                        background-color: #1976d2;
                    }

                .checkout-button {
                    background-color: #4caf50;
                    color: white;
                }

                    .checkout-button:hover {
    
                        background-color: #4caf50;
                    }
    
            </style>


</body>
           
