<body>

   

   <main>   
    <div class="container">
     <aside id="filters" class="filters">
                        <h3>Filter</h3>
                        <div>
                            <h4>Genres</h4>
                            <label><input type="checkbox" value="RPG" data-type="genre" onchange="applyFilters()"> RPG</label><br>
                            <label><input type="checkbox" value="Shooter" data-type="genre" onchange="applyFilters()"> Shooter</label><br>
                            <label><input type="checkbox" value="Adventure" data-type="genre" onchange="applyFilters()"> Adventure</label><br>
                            <label><input type="checkbox" value="Sports" data-type="genre" onchange="applyFilters()"> Sports</label>
                        </div>
                        <div>
                            <h4>Price</h4>
                            <label><input type="checkbox" value="10-19" data-type="price" onchange="applyFilters()"> $10 - $19.99</label><br>
                            <label><input type="checkbox" value="20-39" data-type="price" onchange="applyFilters()"> $20 - $39.99</label><br>
                            <label><input type="checkbox" value="40-59" data-type="price" onchange="applyFilters()"> $40 - $59.99</label><br>
                            <label><input type="checkbox" value="60-79" data-type="price" onchange="applyFilters()"> $60 - $79.99</label>
                        </div>
                        <div class="cart-section">
                            <button id="cartButton" onclick="toggleCart()" class="cart-button">🛒 Cart (<span id="cartCount">0</span>)</button>
                        </div>
                    </aside>
                    <div id="gamesContainer" class="games-list">
                        <!-- Games will be dynamically loaded here -->
                    </div>
                </div>
            </main>

            <div id="cartSidebar" class="cart-sidebar" style="display: none;">
                <h3>Your Cart</h3>
                <button onclick="toggleCart()" style="float: right; background-color: red; color: white; border: none; border-radius: 5px; padding: 5px 10px; cursor: pointer;">Close</button>
                <ul id="cartItems"></ul>
                <button onclick="checkout()" class="checkout-button">Proceed to Checkout</button>
            </div>


            <div id="gameModal" class="modal" style="display: none;">
                <div class="modal-content">
                    <span class="close-button" onclick="closeModal()">&times;</span>
                    <h3 id="modalGameName"></h3>
                    <img id="modalGameImage" src="" alt="Game Image" style="width: 50%; height: auto; border-radius: 10px;">
                    <p id="modalGameDescription"></p>
                    <p><strong>Price:</strong> <span id="modalGamePrice"></span></p>
                    <p><strong>Rating:</strong> <span id="modalGameRating"></span></p>
                    <p><strong>Supported Devices:</strong> <span id="modalGameDevices"></span></p>
                    <button id="addToCartButton" onclick="addToCart()" class="add-to-cart-button">Add to Cart</button>
                </div>
            </div>

            <footer>
                <div class="container">
                    <p>&copy; 2024 <span class="highlight">GameNest</span>. All Rights Reserved.</p>
                </div>
            </footer>

            <script>
                        const gamesContainer = document.getElementById('gamesContainer');
                    const cartSidebar = document.getElementById('cartSidebar');
                    const cartItems = document.getElementById('cartItems');
                    const cartButton = document.getElementById('cartButton');
                    const cartCount = document.getElementById('cartCount');
                    const gameModal = document.getElementById('gameModal');
                    const modalGameName = document.getElementById('modalGameName');
                    const modalGameImage = document.getElementById('modalGameImage');
                    const modalGameDescription = document.getElementById('modalGameDescription');
                    const modalGamePrice = document.getElementById('modalGamePrice');
                    const modalGameRating = document.getElementById('modalGameRating');
                    const modalGameDevices = document.getElementById('modalGameDevices');

                    let cart = [];
                    let buyGames = [
                    { name: "Grand Theft Auto V", price: 14.99, genre: "RPG", description: "An open-world action RPG.", rating: "9/10", devices: "PC, PS5, Xbox", image: "https://i.imgur.com/LEuBCcl.jpg" },
                    { name: "Call of Duty: Black Ops 6", price: 49.99, genre: "Shooter", description: "Experience a dystopian future.", rating: "8.5/10", devices: "PC, PS4, Xbox", image: "https://i.imgur.com/RDqDNdR.png" },
                    { name: "Red Dead Redemption 2", price: 39.99, genre: "Adventure", description: "Life in America at the dawn of the modern age.", rating: "9.5/10", devices: "PC, PS4, Xbox", image: "https://i.imgur.com/2usyqft.jpg" },
                    { name: "FIFA 24", price: 69.99, genre: "Sports", description: "The latest entry in the legendary football franchise.", rating: "7.5/10", devices: "PC, PS5, Xbox", image: "https://i.imgur.com/Z04iXTm.jpeg" },
                    { name: "Rainbow Six Siege", price: 14.99, genre: "Shooter", description: "Lead epic Viking raids.", rating: "8/10", devices: "PC, PS5, Xbox", image: "https://i.imgur.com/Elub5tC.jpg" },
                    { name: "The Witcher Wild Hunt", price: 39.99, genre: "Adventure", description: "Explore distant lands.", rating: "9/10", devices: "PS5, PS4", image: "https://i.imgur.com/njFCfOe.jpg" },
                    { name: "Need for Speed Heat", price: 59.99, genre: "Racing", description: "A high-speed racing adventure.", rating: "9.2/10", devices: "PC, Xbox", image: "https://i.imgur.com/kqBQPBd.jpeg" },
                    { name: "Marvel Spider-Man Remastered", price: 44.99, genre: "Adventure", description: "Epic large-scale battles.", rating: "7.8/10", devices: "PC, PS5, Xbox", image: "https://i.imgur.com/O7YmgYc.jpeg" },
                    { name: "Deathloop", price: 29.99, genre: "Shooter", description: "Fast-paced team-based shooter.", rating: "8.5/10", devices: "PC, PS4, Xbox", image: "https://i.imgur.com/ie24JFR.png" }
                    ];

                    function renderGames(filteredGames = buyGames) {
                    gamesContainer.innerHTML = '';
                    filteredGames.forEach((game, index) => {
                        const gameElement = document.createElement('div');
                        gameElement.classList.add('game');
                        gameElement.innerHTML = `
                            <h3>${game.name}</h3>
                            <img src="${game.image}" alt="${game.name}" style="width: 100%; border-radius: 5px;">
                            <p>${game.description}</p>
                            <p>Price: $${game.price.toFixed(2)}</p>
                            <button onclick="openGameModal(${index})" class="view-details-button">View Details</button>
                        `;
                        gamesContainer.appendChild(gameElement);
                    });
                    }

                function applyFilters() {
                    const selectedGenres = Array.from(document.querySelectorAll('input[data-type="genre"]:checked')).map(cb => cb.value);
                    const selectedPrices = Array.from(document.querySelectorAll('input[data-type="price"]:checked')).map(cb => cb.value);

                    const filteredGames = buyGames.filter(game => {
                        const matchesGenre = selectedGenres.length ? selectedGenres.includes(game.genre) : true;
                        const matchesPrice = selectedPrices.length ? selectedPrices.some(range => {
                            const [min, max] = range.split('-').map(Number);
                            return game.price >= min && game.price <= max;
                        }) : true;
                        return matchesGenre && matchesPrice;
                    });

                    renderGames(filteredGames);
                }

                function openGameModal(index) {
                    const game = buyGames[index];
                    modalGameName.textContent = game.name;
                    modalGameImage.src = game.image;
                    modalGameDescription.textContent = game.description;
                    modalGamePrice.textContent = `$${game.price.toFixed(2)}`;
                    modalGameRating.textContent = game.rating;
                    modalGameDevices.textContent = game.devices;
                    document.getElementById('addToCartButton').setAttribute('data-game-index', index);
                    gameModal.style.display = 'flex';
                }

                function closeModal() {
                    gameModal.style.display = 'none';
                }

                function addToCart() {
                    const index = document.getElementById('addToCartButton').getAttribute('data-game-index');
                    const game = buyGames[index];
                    cart.push(game);
                    updateCart();
                    closeModal();
                }

                function removeFromCart(index) {
                    cart.splice(index, 1);
                    updateCart();
                }

                function updateCart() {
                    cartItems.innerHTML = '';
                    cart.forEach((game, index) => {
                        cartItems.innerHTML += `
                            <li>${game.name} - $${game.price.toFixed(2)}
                                <button onclick="removeFromCart(${index})" style="margin-left: 10px; color: white; background-color: red; border: none; border-radius: 5px; padding: 5px 10px; cursor: pointer;">Remove</button>
                            </li>`;
                    });
                    cartCount.textContent = cart.length;
                }

                function toggleCart() {
                    cartSidebar.style.display = cartSidebar.style.display === 'none' ? 'block' : 'none';
                }


                renderGames();

            </script>


            <style>
