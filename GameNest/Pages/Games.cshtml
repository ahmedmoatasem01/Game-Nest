                        }

                            nav ul li a.active, nav ul li a:hover {
                                color: #2196f3;
                                border-bottom: 2px solid #2196f3;
                            }

                .container {
                    display: flex;
                    max-width: 1200px;
                    margin: 20px auto;
                    padding: 20px;
                }

                .filters {
                    background: #1f1f1f;
                    padding: 15px;
                    margin-right: 20px;
                    border-radius: 10px;
                    width: 250px;
                }

                .cart-section {
                    margin-top: 20px;
                    text-align: center;
                }

                .games-list {
                    background: #1e1e1e;
                    padding: 15px;
                    border-radius: 10px;
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
